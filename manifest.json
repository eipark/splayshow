{
  "manifest_version": 2,

  "name": "Splayshow",
  "description": "This extension unrolls annoying website slideshows.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "SplayShow"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "background"
  ]
}
